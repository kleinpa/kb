    name = "quine_mk1_plate_gerbers",
    srcs = [":quine_mk1_plate_kicad"],
    outs = ["quine_mk1_plate_gerbers.zip"],
    cmd = "./$(location //:make_gerbers) --input=\"$<\" --output=\"$@\"",
    tools = [":make_gerbers"],
)

genrule(
    name = "quine_mk1_board_kicad",
    srcs = [":quine_mk1_pb"],
    outs = ["quine_mk1_board.kicad_pcb"],
    cmd = "./$(location //:processor_kicad) --input=\"$<\" --format=main_kicad_pcb --output=\"$@\"",
    tools = [
        ":processor_kicad",
        "@com_github_keebio_keebio_parts//:all",
        "@com_gitlab_kicad_libraries_kicad_footprints//:all",
    ],
)

genrule(
    name = "quine_mk1_qmk_header",
    srcs = [":quine_mk1_pb"],
    outs = ["quine_mk1_qmk_header.h"],
    cmd = "./$(location //:processor) --input=\"$<\" --format=h --output=\"$@\"",
    tools = [":processor"],
)

